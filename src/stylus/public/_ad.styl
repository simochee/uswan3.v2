.ad
    margin 0 10px
    padding 8px 0
    background rgba(#fff, .1)
    box-shadow 0 2px 2px 0 rgba(#000, .14), 0 3px 1px -2px rgba(#000, .2), 0 1px 5px 0 rgba(#000, .12)
    & > img
        display block
        margin 0 auto
    &.ad-sm
        height 50px
    &.ad-md
        height 100px
    // 場所別margin
    &.ad-header
        margin-top 20px
        margin-bottom 20px
    &.ad-menulist
        margin-bottom 30px