.ad
    position relative
    margin 0 auto
    padding 2px
    background rgba(#fff, .1)
    box-shadow 0 2px 2px 0 rgba(#000, .07), 0 3px 1px -2px rgba(#000, .1), 0 1px 5px 0 rgba(#000, .06)
    &::before
        content 'Sponsered Link'
        display block
        position absolute
        top -15px
        width 100%
        height 15px
        text-shadow 0 2px 2px rgba(#000, .07), 0 3px 1px rgba(#000, .1), 0 1px 5px rgba(#000, .06)
        font-size 10px
        line-height 15px
        text-align center
        color rgba(#333, .6)
        font-weight bold
    // & > img
    //     display block
    //     margin 0 auto
    &.ad-sm
        width 320px
        height 50px
    &.ad-md
        width 320px
        height 100px
    // 場所別margin
    &.ad-header
        margin-top 40px
        margin-bottom 20px
    &.ad-menulist
        margin-top 40px
        margin-bottom 30px