html, body, div, p, ul, ol, li,
h1, h2, h3, h4, h5, h6,
dl, dt, dd,
form, button, input, textarea
	margin 0
	padding 0

body
	padding-top 50px
	background #aaa
	font-family Verdana, Roboto, "Droid Sans", "メイリオ", Meiryo, "ヒラギノ角ゴ ProN W3", "Hiragino Kaku Gothic ProN", "ＭＳ Ｐゴシック", sans-serif;

button, input, textarea, select
	background none
	border none
	outline none

ul, ol
	list-style-type none

h1, h2, h3, h4, h5, h6
	font-weight normal
	font-size 1em